<GuiXml>
  <Controls>
    <TopLevelControl name="LCHMessage1" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="800" y="200" />
      <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="-150" />
      <OnMoveStop>LCH.OnLCHMessage1Move()</OnMoveStop>

      <Controls>
        <Label name="$(parent)Label" width="800" height="200" font="EsoUI/Common/Fonts/univers67.otf|144|soft-shadow-thick" inheritAlpha="true" color="99CCFF"
            wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="MESSAGE ONE">
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
        </Label>
      </Controls>
    </TopLevelControl>

    <TopLevelControl name="LCHMessage2" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="800" y="200" />
      <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="50" />
      <OnMoveStop>LCH.OnLCHMessage2Move()</OnMoveStop>
      
      <Controls>
        <Label name="$(parent)Label" width="800" height="200" font="EsoUI/Common/Fonts/univers67.otf|144|soft-shadow-thick" inheritAlpha="true" color="FF5733"
            wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="MESSAGE TWO" alpha="0.85">
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
        </Label>
      </Controls>
    </TopLevelControl>

    <TopLevelControl name="LCHMessage3" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="800" y="200" />
      <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="150" />
      <OnMoveStop>LCH.OnLCHMessage3Move()</OnMoveStop>
      
      <Controls>
        <Label name="$(parent)Label" width="800" height="200" font="EsoUI/Common/Fonts/univers67.otf|144|soft-shadow-thick" inheritAlpha="true" color="FF00FF"
            wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="MESSAGE THREE" alpha="0.85">
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
        </Label>
      </Controls>
    </TopLevelControl>

    <TopLevelControl name="LCHStatus" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="500" y="200" />
      <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="-150" offsetX="600" />
      <OnMoveStop>LCH.OnLCHStatusMove()</OnMoveStop>
      <Controls>
      <Label name="$(parent)LabelAddonName" font="EsoUI/Common/Fonts/univers67.otf|16|soft-shadow-thick" color="FFFFFF" text="Lucent Citadel Helper" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="-30"/>
      </Label>
      
      <Texture name="$(parent)Divider" textureFile="/esoui/art/miscellaneous/horizontaldivider.dds">
          <Dimensions x="270" y="4"/>
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="-20" offsetX="-210"/>
      </Texture>
      
      <Label name="$(parent)LabelTop" font="ZoFontWinH1" color="FFFFFF" text="TOP MESSAGE" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="-60" offsetX="0"/>
      </Label>


      <!-- Zilyesset -->
      <Label name="$(parent)LabelBossHpDiff" font="ZoFontWinH1" color="FFD666" text="Boss HP diff:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="0"/>
      </Label>
      <Label name="$(parent)LabelBossHpDiffValue" font="ZoFontWinH1" color="ff8500" text="0%" verticalAlignment="CENTER" horizontalAlignment="LEFT" alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="0" offsetX="230"/>
      </Label>

      <!-- Boss Orphic Shattered Shard -->
      <Label name="$(parent)LabelBossColor" font="ZoFontWinH1" color="FFD666" text="Boss color:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="0"/>
      </Label>
      <Label name="$(parent)LabelBossColorValue" font="ZoFontWinH1" color="ff8500" text="-" verticalAlignment="CENTER" horizontalAlignment="LEFT" alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="0" offsetX="230"/>
      </Label>

      <Label name="$(parent)LabelMirrorDrain" font="ZoFontWinH1" color="66CC66" text="Mirror Drain:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="40"/>
      </Label>
      <Label name="$(parent)LabelMirrorDrainValue" font="ZoFontWinH1" color="ff8500" text="-" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="40" offsetX="230"/>
      </Label>

      <Label name="$(parent)LabelLightAdds" font="ZoFontWinH1" color="FFD666" text="Light adds:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="80"/>
      </Label>
      <Label name="$(parent)LabelLightAddsValue" font="ZoFontWinH1" color="ff8500" text="-" verticalAlignment="CENTER" horizontalAlignment="LEFT" alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="80" offsetX="230"/>
      </Label>

      <Label name="$(parent)LabelDarkAdds" font="ZoFontWinH1" color="FFD666" text="Dark adds:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="120"/>
      </Label>
      <Label name="$(parent)LabelDarkAddsValue" font="ZoFontWinH1" color="ff8500" text="-" verticalAlignment="CENTER" horizontalAlignment="LEFT" alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="120" offsetX="230"/>
      </Label>

      <Label name="$(parent)LabelXorynJump" font="ZoFontWinH1" color="FFD666" text="Xoryn jump:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="160"/>
      </Label>
      <Label name="$(parent)LabelXorynJumpValue" font="ZoFontWinH1" color="ff8500" text="-" verticalAlignment="CENTER" horizontalAlignment="LEFT" alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="160" offsetX="230"/>
      </Label>

      <Label name="$(parent)LabelXorynFlood" font="ZoFontWinH1" color="345eeb" text="Xoryn flood:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="200"/>
      </Label>
      <Label name="$(parent)LabelXorynFloodValue" font="ZoFontWinH1" color="345eeb" text="-" verticalAlignment="CENTER" horizontalAlignment="LEFT" alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="200" offsetX="230"/>
      </Label>


    <!-- Boss Xoryn -->
      <Label name="$(parent)LabelKnotTimer" font="ZoFontWinH1" color="FFD666" text="Knot timer:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="0"/>
      </Label>
      <Label name="$(parent)LabelKnotTimerValue" font="ZoFontWinH1" color="ff8500" text="-" verticalAlignment="CENTER" horizontalAlignment="LEFT" alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="0" offsetX="230"/>
      </Label>

      <Label name="$(parent)LabelKnotCounter" font="ZoFontWinH1" color="66CC66" text="Knot counter:" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="40"/>
      </Label>
      <Label name="$(parent)LabelKnotCounterValue" font="ZoFontWinH1" color="ff8500" text="-" verticalAlignment="CENTER" horizontalAlignment="LEFT"  alpha="0.85">
          <Dimensions x="600" y="50" />
          <Anchor point="CENTER"  relativeTo="$(parent)" relativePoint="CENTER" offsetY="40" offsetX="230"/>
      </Label>
    </Controls>
    </TopLevelControl>

    <TopLevelControl name="LCHScreenBorder" tier="HIGH" alpha="0.5" hidden="true">
      <AnchorFill />
      <Controls>
        <Backdrop name="$(parent)Overlay" edgeColor="CC00CC">
          <AnchorFill />
          <Center file="EsoUI/Art/HUD/UITelvarOverlayCenter.dds" />
          <Edge file="EsoUI/Art/HUD/UITelvarOverlayEdge.dds" edgeFileWidth="2048" edgeFileHeight="256" />
          <Insets left="256" top="256" right="-256" bottom="-256" />
        </Backdrop>
      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>
